<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_welcome_container"
    android:background="@drawable/welcome_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sony.quizz.Activity.Welcome">

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:id="@+id/vertical_layout_welcome_container"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="@dimen/btnWidthWelcome"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_double"
            android:text="Play"
            android:textAllCaps="false"
            android:background="@drawable/roundtangle"
            android:id="@+id/button_play" />
        <Button
            android:layout_width="@dimen/btnWidthWelcome"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_double"
            android:text="Help"
            android:textAllCaps="false"
            android:background="@drawable/roundtangle"
            android:id="@+id/button_help" />

        <Button
            android:layout_width="@dimen/btnWidthWelcome"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_double"
            android:text="Setting"
            android:textAllCaps="false"
            android:background="@drawable/roundtangle"
            android:id="@+id/button_setting" />

        <Button
            android:layout_width="@dimen/btnWidthWelcome"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_double"
            android:text="Signout"
            android:textAllCaps="false"
            android:background="@drawable/roundtangle"
            android:id="@+id/button_signout" />

        <Button
            android:layout_width="@dimen/btnWidthWelcome"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_double"
            android:text="Exit"
            android:textAllCaps="false"
            android:background="@drawable/roundtangle"
            android:id="@+id/button_exit" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:rotation="-45"
        android:text="Welcome"
        android:textColor="@android:color/white"
        android:id="@+id/textView"
        android:layout_marginTop="102dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:rotation="-45"
        android:text="Van"
        android:textColor="@android:color/white"
        android:id="@+id/textview_welcome_user_name"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
