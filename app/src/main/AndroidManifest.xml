<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sony.quizz">

    <application
        android:name="Model.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.Launch_Screen"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Level_Selection"
            android:screenOrientation="portrait"
            android:theme="@style/Topeka.CategorySelectionActivity" />
        <activity
            android:name=".Activity.Sign_In"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".Activity.Play_Screen"
            android:screenOrientation="portrait"
            android:theme="@style/Topeka.CategorySelectionActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Activity.Answer_Statistic"
            android:screenOrientation="portrait"
            android:theme="@style/Topeka.CategorySelectionActivity" />
        <activity
            android:name=".Activity.Score"
            android:screenOrientation="portrait"
            android:theme="@style/Topeka.CategorySelectionActivity" />
        <activity
            android:name=".Activity.Top_Score"
            android:screenOrientation="portrait"
            android:theme="@style/Topeka.CategorySelectionActivity" />
        <activity
            android:name=".Activity.Welcome"
            android:screenOrientation="portrait"
            android:theme="@style/Topeka.CategorySelectionActivity">

        </activity>
    </application>

</manifest>